{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JidoWorkflow Triggers Configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "global_settings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "default_debounce_ms": { "type": "integer", "minimum": 0, "default": 500 },
        "max_concurrent_triggers": { "type": "integer", "minimum": 1, "default": 10 }
      }
    },
    "triggers": {
      "type": "array",
      "items": { "$ref": "#/definitions/trigger_item" }
    }
  },
  "definitions": {
    "trigger_item": {
      "type": "object",
      "required": ["id", "workflow_id", "type"],
      "oneOf": [
        { "$ref": "#/definitions/file_system_trigger_item" },
        { "$ref": "#/definitions/git_hook_trigger_item" },
        { "$ref": "#/definitions/signal_trigger_item" },
        { "$ref": "#/definitions/scheduled_trigger_item" },
        { "$ref": "#/definitions/manual_trigger_item" }
      ]
    },
    "file_system_trigger_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "workflow_id", "type", "config"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "workflow_id": { "type": "string", "minLength": 1 },
        "type": { "const": "file_system" },
        "enabled": { "type": "boolean", "default": true },
        "config": {
          "type": "object",
          "additionalProperties": false,
          "required": ["patterns"],
          "properties": {
            "patterns": { "type": "array", "items": { "type": "string" } },
            "events": {
              "type": "array",
              "items": {
                "enum": ["created", "modified", "deleted", "moved", "renamed", "closed", "updated"]
              }
            },
            "debounce_ms": { "type": "integer", "minimum": 0 },
            "root_dir": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "git_hook_trigger_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "workflow_id", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "workflow_id": { "type": "string", "minLength": 1 },
        "type": { "const": "git_hook" },
        "enabled": { "type": "boolean", "default": true },
        "config": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "events": { "type": "array", "items": { "enum": ["commit", "push", "merge"] } },
            "repo_path": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "signal_trigger_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "workflow_id", "type", "config"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "workflow_id": { "type": "string", "minLength": 1 },
        "type": { "const": "signal" },
        "enabled": { "type": "boolean", "default": true },
        "config": {
          "type": "object",
          "additionalProperties": false,
          "required": ["patterns"],
          "properties": {
            "patterns": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "scheduled_trigger_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "workflow_id", "type", "config"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "workflow_id": { "type": "string", "minLength": 1 },
        "type": { "const": "scheduled" },
        "enabled": { "type": "boolean", "default": true },
        "config": {
          "type": "object",
          "additionalProperties": false,
          "required": ["schedule"],
          "properties": {
            "schedule": { "type": "string", "minLength": 1 },
            "params": { "type": "object" }
          }
        }
      }
    },
    "manual_trigger_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "workflow_id", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "workflow_id": { "type": "string", "minLength": 1 },
        "type": { "const": "manual" },
        "enabled": { "type": "boolean", "default": true },
        "config": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "command": { "type": "string", "minLength": 1 }
          }
        }
      }
    }
  }
}
